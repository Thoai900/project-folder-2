rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // ==========================================
    // HELPER FUNCTIONS
    // ==========================================
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isUserOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isDocOwner(resourceId) {
      return request.auth.uid == resourceId;
    }

    // ==========================================
    // DEFAULT: Deny all access
    // ==========================================
    match /{document=**} {
      allow read, write: if false;
    }

    // ==========================================
    // 1. USERS - User profiles (private)
    // ==========================================
    match /users/{userId} {
      // User chỉ có thể đọc profile của chính mình
      allow read: if isAuthenticated() && isUserOwner(userId);
      
      // User chỉ có thể viết profile của chính mình
      allow write: if isAuthenticated() && isUserOwner(userId);
      
      // Sub-collection: Favorites
      match /favorites/{favoriteId} {
        allow read: if isAuthenticated() && isUserOwner(userId);
        allow create, update, delete: if isAuthenticated() && isUserOwner(userId);
      }
      
      // Sub-collection: Settings
      match /settings/{settingId} {
        allow read: if isAuthenticated() && isUserOwner(userId);
        allow write: if isAuthenticated() && isUserOwner(userId);
      }
    }

    // ==========================================
    // 2. PUBLIC PROFILES - Public user info
    // ==========================================
    match /publicProfiles/{userId} {
      // Tất cả authenticated users có thể đọc public profiles
      allow read: if isAuthenticated();
      
      // User chỉ có thể update profile của chính mình
      allow write: if isAuthenticated() && isUserOwner(userId);
    }

    // ==========================================
    // 3. PROMPTS - Shared prompts (collection)
    // ==========================================
    match /prompts/{promptId} {
      // Authenticated users có thể đọc tất cả public prompts
      allow read: if isAuthenticated() && 
                     (resource.data.isPublic == true || 
                      resource.data.createdBy == request.auth.uid);
      
      // User có thể tạo prompt
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid &&
                       request.resource.data.createdAt == request.time;
      
      // User chỉ có thể edit prompt của chính mình
      allow update: if isAuthenticated() && 
                       resource.data.createdBy == request.auth.uid;
      
      // User chỉ có thể xóa prompt của chính mình
      allow delete: if isAuthenticated() && 
                       resource.data.createdBy == request.auth.uid;
      
      // Sub-collection: Comments
      match /comments/{commentId} {
        allow read: if isAuthenticated();
        allow create: if isAuthenticated() && 
                         request.resource.data.userId == request.auth.uid;
        allow update, delete: if isAuthenticated() && 
                                 resource.data.userId == request.auth.uid;
      }
    }

    // ==========================================
    // 4. MESSAGES - Chat/Messages collection
    // ==========================================
    match /messages/{messageId} {
      // Authenticated users có thể đọc tất cả messages
      allow read: if isAuthenticated();
      
      // User tạo message của chính mình
      allow create: if isAuthenticated() && 
                       request.resource.data.userId == request.auth.uid &&
                       request.resource.data.createdAt == request.time;
      
      // Không cho phép edit/delete
      allow update, delete: if false;
    }

    // ==========================================
    // 5. CONVERSATIONS - Chat conversations
    // ==========================================
    match /conversations/{conversationId} {
      // Participants có thể đọc
      allow read: if isAuthenticated() && 
                     (request.auth.uid in resource.data.participants);
      
      // User tạo conversation
      allow create: if isAuthenticated() && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Participants có thể update
      allow update: if isAuthenticated() && 
                       (request.auth.uid in resource.data.participants);
      
      // Chỉ người tạo mới có thể xóa
      allow delete: if isAuthenticated() && 
                       resource.data.createdBy == request.auth.uid;
      
      // Sub-collection: Messages in conversation
      match /messages/{messageId} {
        allow read: if isAuthenticated() && 
                       (request.auth.uid in get(/databases/$(database)/documents/conversations/$(conversationId)).data.participants);
        allow create: if isAuthenticated() && 
                         request.resource.data.userId == request.auth.uid;
        allow delete: if isAuthenticated() && 
                         resource.data.userId == request.auth.uid;
      }
    }

    // ==========================================
    // 6. SHARED PROMPTS - Chia sẻ giữa users
    // ==========================================
    match /sharedPrompts/{sharedId} {
      // Participants có thể đọc
      allow read: if isAuthenticated() && 
                     (request.auth.uid == resource.data.ownerId || 
                      request.auth.uid in resource.data.sharedWith);
      
      // Owner tạo shared prompt
      allow create: if isAuthenticated() && 
                       request.resource.data.ownerId == request.auth.uid;
      
      // Owner có thể update
      allow update: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
      
      // Owner có thể xóa
      allow delete: if isAuthenticated() && 
                       resource.data.ownerId == request.auth.uid;
    }

    // ==========================================
    // 7. ACTIVITY LOG - Ghi nhật ký hoạt động
    // ==========================================
    match /activityLogs/{logId} {
      // User chỉ có thể đọc log của chính mình
      allow read: if isAuthenticated() && 
                     resource.data.userId == request.auth.uid;
      
      // App sẽ tạo logs (backend)
      allow create: if isAuthenticated();
      allow update, delete: if false;
    }

    // ==========================================
    // 8. ANALYTICS - Thống kê sử dụng
    // ==========================================
    match /analytics/{analyticsId} {
      // Chỉ admin mới có thể đọc
      allow read: if isAuthenticated() && 
                     get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role == 'admin';
      
      // App sẽ tạo analytics (backend)
      allow create, update: if false;
    }
  }
}

    // 4. SHARED PROMPTS - Chia sẻ prompt
    // ==========================================
    match /sharedPrompts/{documentId} {
      // Authenticated users có thể đọc shared prompts
      allow read: if request.auth != null;
      
      // User tạo prompt có thể share
      allow create: if request.auth != null && 
                       request.resource.data.createdBy == request.auth.uid;
      
      // Chỉ creator có thể update/delete
      allow update, delete: if request.auth.uid == resource.data.createdBy;
    }

    // ==========================================
    // 5. NOTIFICATIONS - Thông báo
    // ==========================================
    match /notifications/{userId}/{notificationId} {
      // User chỉ có thể đọc notification của chính mình
      allow read: if request.auth.uid == userId;
      
      // Server/Admin tạo notification (không cho client tạo)
      allow create: if false;
      
      // User có thể đánh dấu đã đọc
      allow update: if request.auth.uid == userId;
      
      // User có thể xóa notification của mình
      allow delete: if request.auth.uid == userId;
    }

  }
}
